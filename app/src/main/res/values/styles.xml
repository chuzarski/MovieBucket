<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="movie_detail_title">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="movie_detail_summary">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="movie_detail_style_heading_text">
        <item name="android:layout_marginTop">@dimen/movie_detail_dimen_heading_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/movie_detail_dimen_heading_text_margin</item>
        <item name="android:textSize">@dimen/movie_detail_dimen_heading_text_size</item>
    </style>

    <style name="movie_detail_layout_group_dimensions">
        <item name="android:layout_marginTop">@dimen/movie_detail_dimen_layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/movie_detail_dimen_layout_margin</item>
    </style>

</resources>
