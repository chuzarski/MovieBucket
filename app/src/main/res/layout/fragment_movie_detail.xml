<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.chuzarski.moviebucket.ui.moviedetail.MovieDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/movie_detail_fragment_heading_image"
            />

        <TextView
            android:id="@+id/movie_detail_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/movie_detail_title"/>

        <TextView
            android:id="@+id/movie_detail_fragment_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/movie_detail_summary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/movie_detail_fragment_layout_trailer">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/movie_detail_fragment_trailer_heading_text"
                style="@style/movie_detail_title"
                android:text="@string/movie_detail_fragment_trailer_heading_string"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
