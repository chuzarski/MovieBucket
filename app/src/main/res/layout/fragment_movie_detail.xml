<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.chuzarski.moviebucket.ui.MovieDetailFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/movie_detail_heading_image"
        />

    <TextView
        android:id="@+id/movie_detail_title"
        android:layout_width="380dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_detail_heading_image"
        tools:layout_editor_absoluteX="2dp"
        android:text="This is a default title"/>

    <TextView
        android:id="@+id/movie_detail_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_detail_title"
        android:text="This is a deafult set of text that will be placed here."/>

</android.support.constraint.ConstraintLayout>
